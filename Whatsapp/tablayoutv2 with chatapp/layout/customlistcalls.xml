<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/calls_imageview"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akhil"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/calls_name_textview"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/arrows"
            android:id="@+id/calls_image_for_incoming_outgoing"
          />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today, 11:58 am"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/calls_time_textview"
            android:textAlignment="center"
            />

        </LinearLayout>



        <View
            android:layout_width="235dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_height="2dp"
            android:background="#95a5a6"></View>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:id="@+id/calls_call_or_videocall"/>

</LinearLayout>
