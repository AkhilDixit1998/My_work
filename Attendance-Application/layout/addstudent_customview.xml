<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addstudent_customview_linear"
    android:background="#52B3D9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/addstudentcustom_linear"
        >

        <TextView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#1E8BC3"
            android:textColor="@android:color/white"
            android:text="1"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:id="@+id/addstudent_customview_count"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:layout_marginLeft="12dp"
            android:text="Hello"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/addstudent_customview_roll"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/addstudent_customview_name"/>
        <View
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:id="@+id/demo"></View>
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#fff"
           android:background="@drawable/addstudent_customview_corners_right"
            android:text="@string/dots"
            android:id="@+id/addstudent_customview_listmenu"/>
    </LinearLayout>
</LinearLayout>