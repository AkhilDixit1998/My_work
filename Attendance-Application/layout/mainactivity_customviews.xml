<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainActivity_customView"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">




   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >

       <TextView
           android:layout_width="245dp"
           android:layout_height="40dp"
           android:text="Hello"
           android:id="@+id/custom_course"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="10dp"
           android:paddingTop="5dp"
           android:textColor="@android:color/white"
           android:textSize="25dp"/>

       <TextView
           android:layout_width="60dp"
           android:id="@+id/custom_type"
           android:layout_marginLeft="10dp"
           android:layout_height="25dp"
           android:text="Hello"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:paddingTop="5dp"
           android:background="#535353"
           android:textColor="@android:color/white"
           android:textAlignment="center"
           android:textSize="10dp"/>

   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/user"
            android:textColor="#bdc3c7"
            android:layout_marginLeft="13dp"
            android:id="@+id/main_text_year"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:textSize="13dp"
            android:textColor="#bdc3c7"
            android:id="@+id/custom_year"
            android:layout_marginLeft="10dp"
            android:text="hello"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="13dp"
            android:textColor="#bdc3c7"
            android:layout_marginLeft="0dp"
            android:text="Year/Standard"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/academic"
            android:textColor="@color/branch"
            android:layout_marginLeft="13dp"
            android:id="@+id/main_text_course"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="13dp"
            android:textColor="@color/branch"
            android:id="@+id/custom_branch"
            android:layout_marginLeft="10dp"
            android:text="hello"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/branch"
            android:layout_marginLeft="10dp"
            android:id="@+id/custom_batch"
            android:textSize="13dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >


        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/attendance"
            android:layout_marginLeft="3dp"
            android:textSize="22dp"
            android:textColor="@color/mainicons"
            android:background="@android:color/transparent"
            android:id="@+id/main_btn_atten"/>
        <Button
            android:textSize="22dp"
            android:layout_width="50dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:textColor="@color/mainicons"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:id="@+id/main_btn_edit"/>
        <Button
            android:textSize="22dp"
            android:layout_width="50dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/mainicons"
            android:text="@string/delete"
            android:id="@+id/main_btn_delete"/>
        <Button
            android:textSize="22dp"
            android:layout_width="50dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="@string/addStudents"
            android:textColor="@color/mainicons"
            android:id="@+id/main_btn_addStudents"/>
        <Button
            android:textSize="22dp"
            android:layout_width="50dp"
            android:textColor="@color/mainicons"
            android:background="@android:color/transparent"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:text="@string/arrowdown"
            android:id="@+id/main_btn_show_hide"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_custom_schedule"
        android:orientation="vertical"
        android:visibility="gone"
       >

        <View
            android:layout_width="500dp"
            android:layout_height="0.6dp"
            android:background="@android:color/white"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/clock"
            android:textColor="#ecf0f1"
            android:layout_marginLeft="15dp"
            android:id="@+id/main_text_clock"
            android:textSize="18dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="#ecf0f1"
            android:layout_height="wrap_content"
            android:text="Schedule"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main_dynamic_schedule_add">

    </LinearLayout>
    </LinearLayout>

</LinearLayout>