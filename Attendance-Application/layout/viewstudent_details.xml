<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewstudent_details_mainlinear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:id="@+id/viewstudent_details_imageview"
            android:src="@drawable/akhil"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camerairis"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="220dp"
                android:id="@+id/viewstudent_details_floatingbtn"

                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:text="DTU/2K16/A4/599"
               android:textAlignment="center"
               android:paddingTop="6dp"
               android:paddingLeft="20dp"
               android:textStyle="bold"
               android:textSize="20dp"
               android:id="@+id/viewstudent_details_rollnumber"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="AKHIL DIXIT"
                android:textAlignment="center"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/viewstudent_details_name"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Classes attended :: "
                android:layout_marginLeft="22dp"
                android:paddingTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="3dp"
            android:textSize="25dp"
            android:id="@+id/viewstudent_details_classesattended"
            android:textStyle="bold"/>
        </LinearLayout>

<com.github.mikephil.charting.charts.PieChart
    android:layout_width="match_parent"
    android:layout_marginTop="50dp"
    android:visibility="gone"
    android:layout_height="300dp"

    android:id="@+id/viewstudent_details_piechart">

</com.github.mikephil.charting.charts.PieChart>

    </LinearLayout>
    </ScrollView>


</LinearLayout>